@model TestTask.WEB.ViewModels.ActivityAreaModel

<h2>Добавление сферы деятельности</h2>

<form asp-action="AddActivityArea" asp-controller="ActivityAreas" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div>
            <label asp-for="Name">Введите наименование</label><br />
            <input type="text" asp-for="Name" />
            <span asp-validation-for="Name" />
        </div>
        <div>
            <input type="submit" value="Создать" />
        </div>
    </div>
</form>