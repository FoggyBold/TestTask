@model TestTask.WEB.ViewModels.OrganizationModel

<h2>Добавление организации</h2>

<form asp-action="AddOrganization" asp-controller="Organizations" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div>
            <label asp-for="FullName">Введите полное наименование</label><br />
            <input type="text" asp-for="FullName" />
            <span asp-validation-for="FullName" />
        </div>
        <div>
            <label asp-for="ShortName">Введите краткое наименование</label><br />
            <input type="text" asp-for="ShortName" />
            <span asp-validation-for="ShortName" />
        </div>
        <div>
            <label asp-for="DirectorsFullName">Введите фио директора</label><br />
            <input type="text" asp-for="DirectorsFullName" />
            <span asp-validation-for="DirectorsFullName" />
        </div>
        <div>
            <label asp-for="AuthorizedCapital">Введите уставной капитал</label><br />
            <input type="number" asp-for="AuthorizedCapital" />
            <span asp-validation-for="AuthorizedCapital" />
        </div>
        <div>
            <label asp-for="INN">Введите ИНН</label><br />
            <input type="text" asp-for="INN" />
            <span asp-validation-for="INN" />
        </div>
        <div>
            <label asp-for="KPP">Введите КПП</label><br />
            <input type="text" asp-for="KPP" />
            <span asp-validation-for="KPP" />
        </div>
        <div>
            <label asp-for="OGRN">Введите ОГРН</label><br />
            <input type="text" asp-for="OGRN" />
            <span asp-validation-for="OGRN" />
        </div>
        <div>
            <label asp-for="ActivityArea">Введите сфеору деятельности</label><br />
            <input type="text" asp-for="ActivityArea" />
            <span asp-validation-for="ActivityArea" />
        </div>
        <div>
            <input type="submit" value="Создать" />
        </div>
    </div>
</form>